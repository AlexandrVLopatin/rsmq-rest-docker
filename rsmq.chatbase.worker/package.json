{
  "name": "rsmq-chatbase-worker",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">=10.1.0"
  },
  "dependencies": {
    "@google/chatbase": "^1.1.2",
    "dotenv": "^6.2.0",
    "jsonschema": "^1.2.4",
    "rsmq-worker": "^0.5.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-plugin-node": "^5.2.1"
  },
  "scripts": {
    "lint": "eslint '**/*.js'",
    "start": "cd ./src && node chatbase.worker.js",
    "docker:dev:build": "docker build -f Dockerfile-dev -t rsmq-chatbase-worker-dev .",
    "docker:dev:run": "docker run --network=host --rm --env-file=./.env -v $PWD/src:/rsmq-chatbase-worker/src:ro rsmq-chatbase-worker-dev",
    "docker:dev:shell": "docker exec -it `docker ps |grep rsmq-chatbase-worker-dev |line 1 |awk '{ print $1 }'` sh"
  }
}
